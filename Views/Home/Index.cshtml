@model IEnumerable<GunStore.Models.Gun>

@{
    ViewData["Title"] = "Список Оружия";
}

<h1>Список Оружия</h1>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Цена</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var gun in Model)
        {
            <tr>
                <td>@gun.Name</td>
                <td>@gun.Description</td>
                <td>@gun.Price</td>
            </tr>
        }
    </tbody>
</table>